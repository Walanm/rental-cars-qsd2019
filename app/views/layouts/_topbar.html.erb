<div class="ls-topbar ">
  <span class="ls-show-sidebar ls-ico-menu"></span>
  <a href="/locawebstyle/documentacao/exemplos//pre-painel" class="ls-go-next"><span class="ls-text">Voltar à lista de serviços</span></a>

  <div class="ls-notification-topbar">

    <!-- Links de apoio -->
    <div class="ls-alerts-list" role="alert">
      <a href="#" class="ls-ico-bell-o" data-counter="5" data-ls-module="topbarCurtain" data-target="#ls-notification-curtain"><span>Notificações</span></a>
      <a href="#" class="ls-ico-bullhorn" data-ls-module="topbarCurtain" data-target="#ls-help-curtain"><span>ajuda</span></a>
      <a href="#" class="ls-ico-question" data-ls-module="topbarCurtain" data-target="#ls-feedback-curtain"><span>Sugestões</span></a>
    </div>

    <!-- Dropdown com detalhes da conta de usuário -->
    <% if user_signed_in? %>
      <div data-ls-module="dropdown" class="ls-dropdown ls-user-account">
        <a href="#" class="ls-ico-user">
          <img src="/locawebstyle/assets/images/locastyle/avatar-example.jpg" alt="">
          <span class="ls-name">João Kennedy</span>
          (johnkennedy)
        </a>

        <nav class="ls-dropdown-nav ls-user-menu" aria-hidden="true">
          <ul>
            <li><%= link_to 'Sair', destroy_user_session_path, method: :delete %></li>
          </ul>
        </nav>
      </div>
    <% else %>
      <a href="#" class="ls-ico-user"><%= link_to 'Entrar', new_user_session_path %></a>
    <% end %>
  </div>
    

  <!-- Nome do produto/marca com sidebar -->
  <h1 class="ls-brand-name">
    <a href="home" class="ls-ico-earth">
      <small>Sistema de gestão de locação de carros</small>
      Rental Cars
    </a>
  </h1>

  <!-- Nome do produto/marca sem sidebar quando for o pre-painel -->
